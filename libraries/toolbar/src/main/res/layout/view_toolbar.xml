<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/toolbar_margin_outer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@android:drawable/ic_dialog_alert"
            tools:tint="@android:color/black" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/toolbar_padding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageLeft"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Left Action?" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="end"
            app:constraint_referenced_ids="imageLeft,textLeft" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textMiddle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/barrierLeft"
            app:layout_constraintEnd_toStartOf="@id/barrierRight"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Your Glorious App Name"
            android:ellipsize="middle"
            android:gravity="center"/>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="start"
            app:constraint_referenced_ids="imageRight,textRightUp,textRightDown" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textRightUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/toolbar_padding"
            android:padding="@dimen/toolbar_padding"
            app:layout_constraintBottom_toTopOf="@id/textRightDown"
            app:layout_constraintEnd_toStartOf="@id/imageRight"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Right Action?" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textRightDown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/toolbar_padding"
            android:padding="@dimen/toolbar_padding"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imageRight"
            app:layout_constraintTop_toBottomOf="@id/textRightUp"
            tools:text="Right Action?" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/toolbar_margin_outer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@android:drawable/ic_dialog_alert"
            tools:tint="@android:color/black" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
